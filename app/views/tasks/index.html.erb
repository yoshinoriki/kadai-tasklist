<% if logged_in? %>
    <p>ログイン完了ユーザ：<%= current_user.name %></p>

    <h1>タスク一覧</h1>

    <ul>
        <table>
            <thead>
                <tr>
                    <th>No.</th>
                    <th>タスク</th>
                    <th>status</th>
                </tr>
            </thead>
            <% number = 1 %>
            <% @tasks.each do |task | %>
                <tbody>
                    <tr>
                        <th><%= link_to number, task %></th>
                        <td><%= task.content %></td>
                        <td><%= task.status %></td>
                        <% number += 1 %>
                    </tr>
                </tbody>
            <% end %> 
        </table>
    </ul>
    <%= paginate @tasks %>
<ul style="list-style: none">
   
   <li><%= link_to '新規タスクを登録する', new_task_path %></li>

</ul>
<% else %>
   <div>
       <h1>Welcome to the Tasklist</h1>
       <%= link_to 'Sign up now!', signup_path %>
   </div>
<% end %>